<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ApiConsumos.TodoDetailPopup">
   
    <VerticalStackLayout Padding="20" BackgroundColor="White">
        <Label x:Name="NameLabel" FontAttributes="Bold" FontSize="20" TextColor="Black"/>
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Label Text="Completado:" VerticalOptions="Center" TextColor="Black"/>
            <Switch x:Name="StatusSwitch" Toggled="StatusSwitch_Toggled"/>
        </HorizontalStackLayout>
        <Button Text="Cerrar" Clicked="Close_Clicked"/>
    </VerticalStackLayout>
</toolkit:Popup>